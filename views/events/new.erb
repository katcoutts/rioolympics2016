<h2>Add an event</h2>

<form action="/events" method="post">
  <label for="name">Name:</label> 
  <input type="text" name="name"> 
  &nbsp;
  <label for="sport">Sport:</label>
  <select name="sport"> 
  <option value= "Rowing">Rowing </option>
  <option value= "Athletics">Athletics </option>
  <option value= "Gymnastics">Gymnastics </option>
  <option value= "Cycling">Cycling </option>
  <option value= "Tennis">Tennis </option>
  </select>
  &nbsp;
  <label for="gold_id">Gold medal athlete:</label>
  <select name="gold_id"> 
  <% @athletes.each do |athlete| %> 
  <option value= "<%= athlete.id%>"><%= athlete.first_name %> <%= athlete.last_name %> </option> 
  <% end %>
  </select>
  &nbsp; <label for="silver_id">Silver medal athlete:</label>
  <select name="silver_id"> 
  <% @athletes.each do |athlete| %> 
  <option value= "<%= athlete.id%>"><%= athlete.first_name %> <%= athlete.last_name %> </option> 
  <% end %>
  </select>
  &nbsp; <label for="bronze_id">Bronze medal athlete:</label>
  <select name="bronze_id"> 
  <% @athletes.each do |athlete| %> 
  <option value= "<%= athlete.id%>"><%= athlete.first_name %> <%= athlete.last_name %> </option> 
  <% end %>
  </select>
  &nbsp;
  <input type="submit" value="Add Event">

<!-- NB THIS WON'T WORK UNTIL WE CAN ADD GOLD-ID, SILVER-ID AND BRONZE-ID -->
</form>